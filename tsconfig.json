{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@schemas": [
        "./database/schemas"
      ],
      "@connection": [
        "./config/database.ts"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@errors/*": [
        "./errors/*"
      ],
      "@controllers": [
        "./controllers/"
      ],
      "@routes": [
        "./routes/"
      ]
    },
    "strict": true,
    "skipLibCheck": true
  }
}